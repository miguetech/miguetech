---
interface Repo {
  id: number;
  name: string;
  description: string;
  html_url: string;
  homepage: string | null;
  languages_url: string;
  topics: string[];
}

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

let repos: Repo[] = [];
try {
    const response = await fetch('https://api.github.com/users/miguetech/repos?sort=updated&per_page=6');
    if (response.ok) {
        repos = await response.json();
    } else {
        console.error('Failed to fetch repos', response.statusText);
        // Fallback or empty
    }
} catch (error) {
    console.error('Error fetching repos:', error);
}

// Remove forks if desired, or keep them.
// repos = repos.filter(r => !r.fork);
---

<section id="projects" class="py-20 bg-[var(--color-bg-main)] relative transition-colors duration-300">
     

    <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl md:text-5xl font-bold text-center mb-16 text-[var(--color-text-main)] inline-block w-full">
            {t('projects.title')}
        </h2>
        
        {repos.length === 0 ? (
            <p class="text-center text-[var(--color-text-muted)]">{t('projects.loading')}</p>
        ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {repos.map((repo) => (
                    <article class="group relative bg-[var(--color-bg-card)] rounded-xl overflow-hidden hover:transform hover:-translate-y-2 transition-all duration-300 shadow-md hover:shadow-xl border border-[var(--color-border)] hover:border-[var(--color-accent)]/50 flex flex-col h-full">
                         <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
                         
                         <div class="p-6 flex flex-col flex-1 z-10">
                            <h3 class="text-xl font-bold mb-3 text-[var(--color-text-main)] group-hover:text-[var(--color-accent)] transition-colors">
                                {repo.name}
                            </h3>
                            <p class="text-[var(--color-text-muted)] mb-6 text-sm leading-relaxed flex-1">
                                {repo.description || 'Consulta el código para más detalles.'}
                            </p>
                            
                            {/* Tags/Topics if available, else placeholders or skip */}
                            <div class="flex flex-wrap gap-2 mb-6">
                                {repo.topics && repo.topics.slice(0,3).map(topic => (
                                     <span class="text-xs px-2 py-1 bg-[var(--color-bg-main)] text-[var(--color-accent)] rounded-md border border-[var(--color-border)]">{topic}</span>
                                ))}
                            </div>

                            <div class="flex items-center justify-between pt-4 border-t border-[var(--color-border)]">
                                <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="flex items-center text-[var(--color-text-muted)] hover:text-[var(--color-text-main)] transition-colors text-sm font-medium">
                                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                                    GitHub
                                </a>
                                {repo.homepage && (
                                   <a href={repo.homepage} target="_blank" rel="noopener noreferrer" class="flex items-center text-[var(--color-accent)] hover:text-[var(--color-text-main)] transition-colors text-sm font-bold">
                                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                      {t('projects.viewDemo')}
                                   </a>
                                )}
                            </div>
                         </div>
                    </article>
                ))}
            </div>
        )}
        
        <div class="text-center mt-12">
            <a href="https://github.com/miguetech" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 border border-[var(--color-border)] rounded-lg text-[var(--color-text-muted)] hover:text-[var(--color-text-main)] hover:border-[var(--color-text-main)] transition-all duration-300">
                {t('projects.viewAll')}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
        </div>
    </div>
</section>
